<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tn.iit.e_shopping.Activity.RechercheProduit"
    tools:showIn="@layout/activity_recherche_produit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:text="Recherche un produit"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#DC143C"
        />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nom produit:"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recherche"

            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Prix maximale:"
            android:textColor="#0000FF"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_prix_maxiamale_value"
            android:layout_alignParentStart="true" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_max"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Prix minimale:"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txt_prix_minimale_value"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seek_min"
 />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="recherche"
        android:layout_marginBottom="30dp"
        android:id="@+id/bt_rechercher"
        android:layout_marginTop="10dp"
         />




    </LinearLayout>
</RelativeLayout>
