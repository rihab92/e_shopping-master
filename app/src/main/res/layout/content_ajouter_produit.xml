<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tn.iit.e_shopping.Activity.AjouterProduit"
    tools:showIn="@layout/activity_ajouter_produit">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:text="Ajouter un produit"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#DC143C"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nom produit:"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/et_nomproduit" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Caractéristique produit :"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/et_caracte"
         />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Prix produit :"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/et_prix"

        android:layout_alignParentStart="true"
       />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Catégorie produit :"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/et_categorie"

            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Adresse produit :"
            android:textColor="#0000FF"
            android:textStyle="italic"
            />



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/et_categorie"
        android:layout_alignParentStart="true" />



    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prendre une photo "
        android:id="@+id/photo"
        android:layout_below="@+id/categorie"
        android:layout_alignParentStart="true"
        android:textColor="#0000FF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"

        android:id="@+id/bt_ajouter"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_ajouter"
        android:layout_above="@+id/categorie"
        android:layout_centerHorizontal="true" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
